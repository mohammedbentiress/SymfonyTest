{% extends 'base.html.twig' %}

{% block title %}Blogs{% endblock %}

{% block body %}
{# <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style> #}
<div class="section pt-5 pb-0">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7 text-center">
                <h2 class="heading">Trending</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="posts-slide-wrap">
                    <div class="posts-slide" id="posts-slide">
                        {% for blog in trends %}
                        <div class="item">
                            <div class="post-entry d-lg-flex">
                                <div class="me-lg-5 thumbnail mb-4 mb-lg-0">
                                    <a href="{{path('blog', {slug:blog.slug})}}">
                                        <img src="https://picsum.photos/440/385" alt="Image" class="img-fluid">
                                    </a>
                                </div>
                                <div class="content align-self-center">
                                    <div class="post-meta mb-3">
                                        <a href="{{path('category', {slug:blog.category.slug})}}" class="category">{{blog.category.title}}</a> 
                                        &mdash;
                                        <span class="date">{{ blog.createdAt|date("F d, Y") }}</span>
                                    </div>
                                    <h2 class="heading"><a href="{{path('blog', {slug:blog.slug})}}">{{blog.title}}</a></h2>
                                    <p>{{blog.introduction}}</p>
                                    <a href="#" class="post-author d-flex align-items-center">
                                        <div class="author-pic">
                                            <img src="https://i.pravatar.cc/45" alt="Image">
                                        </div>
                                        <div class="text">
                                            <strong>Sergy Campbell</strong>
                                            <span>CEO and Founder</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row g-5">
            {% for blog in last %}
            <div class="col-lg-4">
                <div class="post-entry d-block small-post-entry-v">
                    <div class="thumbnail">
                        <a href="{{path('blog', {slug:blog.slug})}}">
                            <img src="{{ blog.cover }}" alt="Image" class="img-fluid">
                        </a>
                    </div>
                    <div class="content">
                        <div class="post-meta mb-1">
                            <a href="{{path('category', {slug:blog.category.slug})}}" class="category">{{blog.category.title}}</a>&mdash;
                            <span class="date">{{blog.createdAt | date("F d, Y")}}</span>
                        </div>
                        <h2 class="heading mb-3"><a href="{{path('blog', {slug:blog.slug})}}">{{blog.title}}</a></h2>
                        <p>{{blog.introduction}}</p>
                        <a href="#" class="post-author d-flex align-items-center">
                            <div class="author-pic">
                                <img src="https://i.pravatar.cc/45" alt="Image">
                            </div>
                            <div class="text">
                                <strong>Sergy Campbell</strong>
                                <span>CEO and Founder</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7 text-center">
                <h2 class="heading">Most Popular Posts</h2>
            </div>
        </div>
    </div>
    <div class="most-popular-slider-wrap px-3 px-md-0">
        <div id="most-popular-nav">
            <span class="prev" data-controls="prev">{% trans %}Prev {% endtrans %}</span>
            <span class="next" data-controls="next">{% trans %}Next{% endtrans %}</span>
        </div>
        <div class="most-popular-slider" id="most-popular-center">
        {% for blog in popular %}
            <div class="item">
                <div class="post-entry d-block small-post-entry-v">
                    <div class="thumbnail">
                        <a href="{{path('blog', {slug:blog.slug})}}">
                            <img src="{{blog.cover}}" alt="Image" class="img-fluid">
                        </a>
                    </div>
                    <div class="content">
                        <div class="post-meta mb-1">
                            <a href="{{path('category', {slug:blog.category.slug})}}" class="category">{{blog.category.title}}</a> &mdash;
                            <span class="date">{{blog.createdAt | date("F d, Y")}}</span>
                        </div>
                        <h2 class="heading mb-3"><a href="{{path('blog', {slug:blog.slug})}}">{{blog.title}}</a></h2>
                        <p>{{blog.introduction}}</p>
                        <a href="#" class="post-author d-flex align-items-center">
                            <div class="author-pic">
                                <img src="https://i.pravatar.cc/45" alt="Image">
                            </div>
                            <div class="text">
                                <strong>Sergy Campbell</strong>
                                <span>CEO and Founder</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="h4 fw-bold">{{leftBlogs[0].category.title}}</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                {% for blog in leftBlogs|slice(0, 3) %}
                    <div class="col-lg-12">
                        <div class="post-entry d-md-flex xsmall-horizontal mb-5">
                            <div class="me-md-3 thumbnail mb-3 mb-md-0">
                                <img src="{{blog.cover}}" alt="Image" class="img-fluid">
                            </div>
                            <div class="content">
                                <div class="post-meta mb-1">
                                    <a href="#" class="category">{{blog.category.title}}</a>
                                    &mdash;
                                    <span class="date">{{blog.createdAt | date("F d, Y")}}</span>
                                </div>
                                <h2 class="heading"><a href="{{path('blog', {slug:blog.slug})}}">{{blog.title}}</a></h2>
                                <a href="#" class="post-author d-flex align-items-center">
                                    <div class="author-pic">
                                        <img src="https://i.pravatar.cc/45" alt="Image">
                                    </div>
                                    <div class="text">
                                        <strong>Sergy Campbell</strong>
                                        <span>Author, 26 published post</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="h4 fw-bold">{{rightblogs[0].category.title}}</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                    {% for blog in rightblogs|slice(0, 3) %}
                    <div class="col-lg-12">
                        <div class="post-entry d-md-flex xsmall-horizontal mb-5">
                            <div class="me-md-3 thumbnail mb-3 mb-md-0">
                                <img src="{{blog.cover}}" alt="Image" class="img-fluid">
                            </div>
                            <div class="content">
                                <div class="post-meta mb-1">
                                    <a href="{{path('category', {slug:blog.category.slug})}}" class="category">{{blog.category.title}}</a>
                                    &mdash;
                                    <span class="date">{{blog.createdAt | date("F d, Y")}}</span>
                                </div>
                                <h2 class="heading"><a href="{{path('blog', {slug:blog.slug})}}">{{blog.title}}</a></h2>
                                <a href="#" class="post-author d-flex align-items-center">
                                    <div class="author-pic">
                                        <img src="https://i.pravatar.cc/45" alt="Image">
                                    </div>
                                    <div class="text">
                                        <strong>Sergy Campbell</strong>
                                        <span>Author, 26 published post</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="py-5 bg-light mx-md-3 sec-subscribe">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="h4 fw-bold">Subscribe to newsletter</h2>
            </div>
        </div>
        <form action="#" class="row">
            <div class="col-md-8">
                <div class="mb-3 mb-md-0">
                    <input type="email" class="form-control" placeholder="Enter your email">
                </div>
            </div>
            <div class="col-md-4 d-grid">
                <input type="submit" class="btn btn-primary" value="Subscribe">
            </div>
        </form>
    </div>
</div>
{% endblock %}

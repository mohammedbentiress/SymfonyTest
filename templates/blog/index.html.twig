{% extends 'base.html.twig' %}

{% block title %}{{blog.title}}{% endblock %}

{% block body %}
<div class="section post-section pt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center">
                    <img src="https://i.pravatar.cc/45" alt="Image" class="author-pic img-fluid rounded-circle mx-auto">
                </div>
                <span class="d-block text-center">Sergy Campbell</span>
                <span class="date d-block text-center small text-uppercase text-black-50 mb-5">{{blog.createdAt|date("m/d/Y") }}</span>
                <h2 class="heading text-center">{{blog.title}}</h2>
                <p class="lead mb-4 text-center">{{blog.introduction}}</p>
                <img src="{{blog.cover}}" alt="Image" class="img-fluid rounded mb-4">
                <p>{{blog.content |raw}}</p>
                <div class="row mt-5 pt-5 border-top">
                    <div class="col-12">
                        <span class="fw-bold text-black small mb-1">{% trans %}Share {% endtrans %}</span>
                        <ul class="social list-unstyled">
                            <li><a href="#"><span class="icon-facebook"></span></a></li>
                            <li><a href="#"><span class="icon-twitter"></span></a></li>
                            <li><a href="#"><span class="icon-linkedin"></span></a></li>
                            <li><a href="#"><span class="icon-pinterest"></span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {{ form_start(form) }}
            {{form_row(form.username)}}
            {{form_row(form.userEmail)}}
            {{form_row(form.content)}}
            <button type="submit" class="btn btn-info">Register</button>
        {{ form_end(form) }}
        {% for comment in comments %}
                <div class="col-lg-12">
                    <div class="post-entry d-md-flex small-horizontal mb-5">
                        <div class="content">
                            {# <div class="post-meta mb-3">
                                <a href="#" class="category">{{ item.category.title }}</a> &mdash;
                                <span class="date">{{blog.createdAt|date("m/d/Y") }}</span>
                            </div> #}
                            {# <h2 class="heading"><a href="single.html">{{item.title}}</a></h2> #}
                            <p>{{ comment.content }}</p>
                            <a href="#" class="post-author d-flex align-items-center">
                                <div class="author-pic">
                                    <img src="https://i.pravatar.cc/45" alt="Image">
                                </div>
                                <div class="text">
                                    <strong>{{comment.username}}</strong>
                                    <span>{{comment.userEmail}}</span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

        {% endfor %}
    </div>
</div>
<div class="section pb-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="heading">{% trans %} Related {% endtrans %}</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            {% for item in related %}
            {% if blog.title is not same as item.title %}
                <div class="col-lg-12">
                    <div class="post-entry d-md-flex small-horizontal mb-5">
                        <div class="me-md-5 thumbnail mb-3 mb-md-0">
                            <img src="{{item.cover}}" alt="Image" class="img-fluid">
                        </div>
                        <div class="content">
                            <div class="post-meta mb-3">
                                <a href="#" class="category">{{ item.category.title }}</a> &mdash;
                                <span class="date">{{blog.createdAt|date("m/d/Y") }}</span>
                            </div>
                            <h2 class="heading"><a href="single.html">{{item.title}}</a></h2>
                            <p>{{ item.introduction }}</p>
                            <a href="#" class="post-author d-flex align-items-center">
                                <div class="author-pic">
                                    <img src="https://i.pravatar.cc/45" alt="Image">
                                </div>
                                <div class="text">
                                    <strong>Sergy Campbell</strong>
                                    <span>Author, 26 published post</span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
